<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#212121">

    <!-- Imagen original ajustada proporcionalmente -->
    <ImageView
        android:id="@+id/imagen_original"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:background="#424242"
    android:elevation="6dp"
    android:padding="4dp"/>

    <!-- Contenedor para el GridLayout del rompecabezas -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
    android:layout_gravity="center"
    android:background="#37474F"
    android:padding="12dp">

    <GridLayout
        android:id="@+id/grid_puzzle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:gravity="center"
        android:padding="4dp"/>
</FrameLayout>

    <!-- Botones -->
<Button
android:id="@+id/btn_volver"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Volver al inicio"
android:textColor="#FFFFFF"
android:background="#673AB7"
android:padding="14dp"
android:elevation="8dp"
android:layout_marginTop="12dp"/>

<Button
android:id="@+id/btn_resolver"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Resolver automÃ¡ticamente"
android:textColor="#FFFFFF"
android:background="#FF5722"
android:padding="14dp"
android:elevation="8dp"
android:layout_marginTop="12dp"/>

    </LinearLayout>